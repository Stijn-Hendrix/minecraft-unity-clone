{
    Triangle tri0;
    tri0.v_a = float3(1, 0, 1) + offset;
    tri0.v_b = float3(1, 1, 1) + offset;
    tri0.v_c = float3(0, 0, 1) + offset;
    tri0.uv_a = float2(uvs.x, uvs.y) / 16;
    tri0.uv_b = float2(uvs.x, uvs.y + 1) / 16;
    tri0.uv_c = float2(uvs.x + 1, uvs.y) / 16;
    _Triangles.Append(tri0);

    Triangle tri1;
    tri1.v_a = float3(1, 1, 1) + offset;
    tri1.v_b = float3(0, 1, 1) + offset;
    tri1.v_c = float3(0, 0, 1) + offset;
