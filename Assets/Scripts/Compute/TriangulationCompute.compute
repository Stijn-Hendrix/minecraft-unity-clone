#pragma kernel CSMain

#include "Includes/ChunkData.cginc"

static const int computeThreads = 8;

RWStructuredBuffer<int> _Blocks;

struct BlockTypeUvs {
    float2 TopUV;
    float2 BottomUV;
    float2 SidesUV;
};

RWStructuredBuffer<BlockTypeUvs> _BlocksAtlas;

struct Triangle {
    float3 v_a, v_b, v_c;
    float2 uv_a, uv_b, uv_c;
};


AppendStructuredBuffer<Triangle> _Triangles;

void AddTopFace(float2 uvs, float3 offset)
{
    Triangle tri0;
    tri0.v_a = float3(0, 1, 0) + offset;
    tri0.v_b = float3(0, 1, 1) + offset;
    tri0.v_c = float3(1, 1, 0) + offset;
    tri0.uv_a = float2(uvs.x, uvs.y) / 16;
    tri0.uv_b = float2(uvs.x, uvs.y + 1) / 16;
    tri0.uv_c = float2(uvs.x + 1, uvs.y) / 16;
    _Triangles.Append(tri0);

    Triangle tri1;
    tri1.v_a = float3(0, 1, 1) + offset;
    tri1.v_b = float3(1, 1, 1) + offset;
    tri1.v_c = float3(1, 1, 0) + offset;
    tri1.uv_a = float2(uvs.x, uvs.y + 1) / 16;
    tri1.uv_b = float2(uvs.x + 1, uvs.y + 1) / 16;
    tri1.uv_c = float2(uvs.x + 1, uvs.y) / 16;
    _Triangles.Append(tri1);
}

